<section>

<h1><: $table :></h1>
            
<p><a href="/admin/<: $table :>/create">create</a></p>

<table>
    <tr>
: for $columns -> $column { 
        <th><: $column :></th> 
: }
        <th></th>
    </tr>
: for $rows -> $row {
    <tr>
:     for $columns -> $column { 
        <td><: $row[$column] :></td> 
:     }
        <td>
            <a href="/admin/<: $table :>/show/<: $row._key :>">show</a>
            <a href="/admin/<: $table :>/edit/<: $row._key :>">edit</a>
            <a href="/admin/<: $table :>/delete/<: $row._key :>">delete</a>
        </td>
    </tr>
: }
</table>  

</section>
